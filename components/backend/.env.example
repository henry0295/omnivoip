# =============================================================================
# EXAMPLE ENVIRONMENT CONFIGURATION
# Copy this file to .env and update with your values
# =============================================================================

# General
PROJECT_NAME=omnivoip
DEBUG=True
SECRET_KEY=change-this-to-a-random-secret-key-in-production

# Django
DJANGO_SETTINGS_MODULE=omnivoip.settings.development
ALLOWED_HOSTS=localhost,127.0.0.1
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173

# Database
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=omnivoip
POSTGRES_USER=omnivoip
POSTGRES_PASSWORD=omnivoip

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Celery
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# Session
SESSION_COOKIE_AGE=86400

# MinIO/S3 Storage
S3_STORAGE_ENABLED=False
MINIO_ENDPOINT=http://localhost:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
BUCKET_NAME=omnivoip

# Asterisk AMI
ASTERISK_AMI_HOST=localhost
ASTERISK_AMI_PORT=5038
ASTERISK_AMI_USER=admin
ASTERISK_AMI_SECRET=admin

# Asterisk ARI
ASTERISK_ARI_HOST=localhost
ASTERISK_ARI_PORT=8088
ASTERISK_ARI_USER=admin
ASTERISK_ARI_PASSWORD=admin

# Gearman
GEARMAN_SERVER=localhost:4730

# Timezone
TZ=America/Argentina/Cordoba

# Email (for production)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=
EMAIL_HOST_PASSWORD=
DEFAULT_FROM_EMAIL=noreply@omnivoip.com
